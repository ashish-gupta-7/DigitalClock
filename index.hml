<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advanced Digital Clock</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <button id="toggleDarkMode">üåô Dark Mode</button>

    <div class="clock-container">
        <h1 id="time">00:00:00 AM</h1>
        <p id="date">Monday, 01-01-2025</p>
        <button id="toggleFormat">Switch to 24H</button>
    </div>

    <div class="alarm-container">
        <h2>‚è∞ Set Alarm</h2>
        <input type="time" id="alarmTime">
        <button id="setAlarm">Set Alarm</button>
        <button id="clearAlarm">Clear Alarm</button>
        <p id="alarmStatus">No Alarm Set</p>
    </div>

    <div class="stopwatch-container">
        <h2>‚è≥ Stopwatch</h2>
        <p id="stopwatch">00:00:00</p>
        <button id="startStopwatch">Start</button>
        <button id="pauseStopwatch">Pause</button>
        <button id="resetStopwatch">Reset</button>
    </div>

    <div class="timer-container">
        <h2>‚è≤ Timer</h2>
        <input type="number" id="timerInput" placeholder="Enter seconds">
        <p id="timerDisplay">00:00</p>
        <button id="startTimer">Start</button>
        <button id="pauseTimer">Pause</button>
        <button id="resetTimer">Reset</button>
    </div>

    <div class="theme-container">
        <h2>üé® Change Theme</h2>
        <button class="theme-btn" data-theme="default">Default</button>
        <button class="theme-btn" data-theme="blue">Blue</button>
        <button class="theme-btn" data-theme="green">Green</button>
    </div>

    <script src="script.js"></script>
</body>
</html>

